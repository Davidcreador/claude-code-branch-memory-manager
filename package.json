{
  "name": "claude-code-branch-memory-manager",
  "version": "2.0.0",
  "description": "Professional branch-specific memory management for Claude Code. Automatically switches CLAUDE.md files when you change git branches.",
  "main": "src/bin/branch-memory",
  "bin": {
    "branch-memory": "src/bin/branch-memory"
  },
  "scripts": {
    "test": "./tests/test-runner.sh",
    "install": "./install.sh",
    "lint": "shellcheck src/**/*.sh",
    "format": "shfmt -w src/**/*.sh",
    "benchmark": "./benchmarks/run-benchmarks.sh",
    "docs": "echo 'See docs/ directory for documentation'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Davidcreador/claude-code-branch-memory-manager.git"
  },
  "keywords": [
    "claude",
    "claude-code",
    "git",
    "branch",
    "memory",
    "context",
    "automation",
    "developer-tools",
    "workflow",
    "productivity",
    "ai",
    "development",
    "git-hooks",
    "shell",
    "bash"
  ],
  "author": {
    "name": "David Pastor",
    "url": "https://github.com/Davidcreador"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Davidcreador/claude-code-branch-memory-manager/issues"
  },
  "homepage": "https://github.com/Davidcreador/claude-code-branch-memory-manager#readme",
  "engines": {
    "bash": ">=3.2",
    "git": ">=2.0"
  },
  "os": [
    "darwin",
    "linux"
  ],
  "preferGlobal": true,
  "directories": {
    "doc": "docs",
    "test": "tests",
    "example": "examples"
  },
  "files": [
    "src/",
    "docs/",
    "install.sh",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ]
}